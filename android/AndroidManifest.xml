<?xml version="1.0" encoding="utf-8"?>

<manifest
    xmlns:android="http://schemas.android.com/apk/res/android" package="com.sadboy.wallpapers" android:versionName="0.5" android:versionCode="7">

    <uses-sdk android:minSdkVersion="7" />
    <uses-feature android:name="android.software.live_wallpaper" />

    <application
        android:label="@string/wallpapers"
        android:icon="@drawable/icon" android:debuggable="true">
        
          <service
            android:label="@string/wallpaper_balls"
            android:name=".Balls"
            android:thumbnail="@drawable/balls"
            android:icon="@drawable/balls"
            android:permission="android.permission.BIND_WALLPAPER">
            <intent-filter>
                <action android:name="android.service.wallpaper.WallpaperService" />
            </intent-filter>
            <meta-data android:name="android.service.wallpaper" android:resource="@xml/balls" />
        </service>
         <service
            android:label="@string/wallpaper_prison"
            android:name=".PrisonYard"
            android:thumbnail="@drawable/icon"
            android:icon="@drawable/icon"
            android:permission="android.permission.BIND_WALLPAPER">
            <intent-filter>
                <action android:name="android.service.wallpaper.WallpaperService" />
            </intent-filter>
            <meta-data android:name="android.service.wallpaper" android:resource="@xml/prison" />
        </service>
        <service
            android:label="@string/wallpaper_fire"
            android:name=".FireWallpaperService"
            android:thumbnail="@drawable/fire"
            android:icon="@drawable/icon"
            android:permission="android.permission.BIND_WALLPAPER">
            <intent-filter>
                <action android:name="android.service.wallpaper.WallpaperService" />
            </intent-filter>
            <meta-data android:name="android.service.wallpaper" android:resource="@xml/fire" />
        </service>
        
        
        
        <service
            android:label="@string/wallpaper_fingerPaint"
            android:name=".FingerPaint"
            android:thumbnail="@drawable/finger_paint"
            android:icon="@drawable/finger_paint"
            android:permission="android.permission.BIND_WALLPAPER">
            <intent-filter>
                <action android:name="android.service.wallpaper.WallpaperService" />
            </intent-filter>
            <meta-data android:name="android.service.wallpaper" android:resource="@xml/paint" />
        </service>
        <service
            android:label="@string/wallpaper_splatter"
            android:name=".Splatter"
            android:thumbnail="@drawable/splatter"
            android:icon="@drawable/splatter"
            android:permission="android.permission.BIND_WALLPAPER">
            <intent-filter>
                <action android:name="android.service.wallpaper.WallpaperService" />
            </intent-filter>
            <meta-data android:name="android.service.wallpaper" android:resource="@xml/splatter" />
        </service>
        <activity
            android:label="@string/settings"
            android:name=".SplatterSettings"
            android:theme="@android:style/Theme.Light.WallpaperSettings"
            android:exported="true">
        </activity>

    </application>
</manifest>
